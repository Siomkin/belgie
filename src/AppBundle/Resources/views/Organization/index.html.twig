{% extends 'AppBundle::layout.html.twig' %}

{% block content -%}
    <h1>Список организаций</h1>
    <div class="text-right">
        <a class="btn btn-default" href="{{ path('organization_new') }}">
            Добавить организацию
        </a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('organization_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('organization_show', { 'id': entity.id }) }}">Список каналов связи</a>
                        </li>
                        <li>
                            <a href="{{ path('organization_edit', { 'id': entity.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
