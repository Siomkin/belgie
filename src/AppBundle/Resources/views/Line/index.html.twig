{% extends 'AppBundle::layout.html.twig' %}

{% block content -%}
    <h1>Line list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Nodelength</th>
                <th>Cabletype</th>
                <th>Cablemark</th>
                <th>Cablecap</th>
                <th>Capacity</th>
                <th>Isactivesw</th>
                <th>Extid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('line_show', { 'id': entity.extId }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.nodeLength }}</td>
                <td>{{ entity.cableType }}</td>
                <td>{{ entity.cableMark }}</td>
                <td>{{ entity.cableCap }}</td>
                <td>{{ entity.capacity }}</td>
                <td>{{ entity.isActiveSw }}</td>
                <td>{{ entity.extId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('line_show', { 'id': entity.extId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('line_edit', { 'id': entity.extId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('line_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
