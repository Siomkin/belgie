{% extends 'layout.html.twig' %}

{% block content -%}
    <h1>Улица</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Название</th>
            <td>{{ street.name }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ street.id }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('street') }}">
                Назад к списку
            </a>
        </li>
        <li>
            <a href="{{ path('street_edit', { 'id': street.id }) }}">
                Редактировать
            </a>
        </li>
    </ul>
    <div class="text-right">{{ include('street/_delete_form.html.twig') }}</div>

{% endblock %}
