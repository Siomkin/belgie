{% extends 'layout.html.twig' %}

{% block content -%}
    <h1>Список улиц</h1>
    <div class="text-right">
        <a class="btn btn-default" href="{{ path('street_new') }}">
            Добавить улицу
        </a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for street in streets %}
            <tr>
                <td>{{ street.id }}</td>
                <td><a href="{{ path('street_show', { 'id': street.id }) }}">{{ street.name }}</a></td>
                <td><a href="{{ path('street_edit', { 'id': street.id }) }}">редактировать</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
