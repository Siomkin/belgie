{% extends 'layout.html.twig' %}

{% block content -%}
    <h1>Город</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Название</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('city') }}">
                Назад к списку
            </a>
        </li>
        <li>
            <a href="{{ path('city_edit', { 'id': entity.id }) }}">
                Редактировать
            </a>
        </li>
    </ul>
    <div class="text-right">{{ form(delete_form) }}</div>
{% endblock %}
