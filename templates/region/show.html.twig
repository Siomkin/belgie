{% extends 'layout.html.twig' %}

{% block content -%}
    <h1>Регион</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Название</th>
            <td>{{ region.name }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ region.id }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('region') }}">
                Назад к списку
            </a>
        </li>
        <li>
            <a href="{{ path('region_edit', { 'id': region.id }) }}">
                Редактировать
            </a>
        </li>
    </ul>
    <div class="text-right">{{ include('region/_delete_form.html.twig') }}</div>
{% endblock %}
