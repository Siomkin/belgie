{% extends 'layout.html.twig' %}

{% block content -%}
    <h1>Каналы</h1>
    <div class="text-right">
        <a class="btn btn-default" href="{{ path('canal_new') }}">
            Добавить канал
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
            <th>id</th>
            <th>Наименование канала связи</th>
            <th>Оборудование начального узла</th>
            <th>Оборудование конечного узла</th>
            <th>Активн.</th>
            <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for canal in canals %}
            <tr>
                <td>{{ canal.extId }}</td>
                <td>{{ canal.name }}</td>
                <td>{{ canal.beginEquip }}</td>
                <td>{{ canal.endEquip }}</td>
                <td>{{ canal.isActiveSw }}</td>
                <td>
                    <a href="{{ path('canal_edit', { 'extId': canal.extId }) }}">Редакт.</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if canals.haveToPaginate %}
        <div class="navigation text-center">
            {{ pagerfanta(canals, 'twitter_bootstrap3_translated', {routeName: 'canal_index_paginated', routeParams: app.request.query.all}) }}
        </div>
    {% endif %}

{% endblock %}
